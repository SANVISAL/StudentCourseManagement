{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      // "lib": ["es6", "dom"],
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist"
    },
    "include": [
      "app.ts",
      "src/**/*.ts",
      "src/swagger/swagger.ts",
      // "tsoa.json" // Add this line to include the TSOA configuration file
    ],
    "exclude": [
      "node_modules"
    ],
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ]
  }